            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tutorial.activity_tutorial"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".menus.activity_homescreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".contenidos.activity_contenidos"
            android:label="Cursos"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".canvas.activity_draw"
            android:label="Canvas"
            android:screenOrientation="landscape" />
        <activity
            android:name=".canvas.open_file"
            android:label="@string/title_activity_open_file" >

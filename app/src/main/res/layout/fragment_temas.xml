<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.draw_lessons.contenidos.activity_temas"
    android:orientation="horizontal"
    android:id="@+id/ll_temas">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="502dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_curso"
            android:src="@drawable/ic_placeholder"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:elevation="12dp"
            android:layout_weight="30"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="40"
            android:weightSum="90">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="45"
                android:weightSum="20">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"
                    android:layout_weight="15"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_favorites_off" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tv_nombre_curso"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/tv_descripcion_curso"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="45"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyler_view_temas"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:layout_margin="10dp"
        android:layout_weight="20" />

</LinearLayout>
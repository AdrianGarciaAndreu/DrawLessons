<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_headTuto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text="Qué puedes hacer"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_tuto2"
        android:layout_gravity="center"
        android:background="@drawable/ic_tactil"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="585dp"
        android:layout_height="wrap_content"
        android:text="Dibuja, traza líneas rectas con la regla, crea circunferencias perfectas con el compás. Solo tienes que elegir la herramienta."
        android:textStyle="bold"
        android:textSize="20dp"
        android:editable="false"
        android:id="@+id/editText_Tuto2"
        android:layout_marginTop="40dp"
        android:autoText="false"
        android:elegantTextHeight="true" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_headTuto4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text="Comienza a utilizar Draw Lessons"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_understood"
        android:layout_gravity="center"
        android:background="@drawable/ic_understood_style"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="519dp"
        android:layout_height="wrap_content"
        android:text="Pulsa en la imagen para empezar a usar Draw Lessons. Sabemos que necesitamos mejorar y seguimos trabajando para conseguirlo. Esperamos que te guste ;)."
        android:textStyle="bold"
        android:textSize="20dp"
        android:editable="false"
        android:id="@+id/editText_Tuto4"
        android:layout_marginTop="40dp"
        android:autoText="false"
        android:elegantTextHeight="true" />

</LinearLayout>
